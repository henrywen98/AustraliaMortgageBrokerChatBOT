# =============================================================================
# Streamlit Cloud Secrets 配置示例
# =============================================================================
# 使用说明：
# 1. 登录 https://share.streamlit.io/
# 2. 找到你的应用 -> Settings -> Secrets
# 3. 将下面的内容复制到 Secrets 框中
# 4. 替换 your_actual_api_key 为真实的API密钥
# 5. 保存并重新部署应用

# =============================================================================
# 必需配置
# =============================================================================

OPENAI_API_KEY = "your_actual_openai_api_key_here"

# =============================================================================
# 可选配置
# =============================================================================

# 模型设置
MODEL_NAME = "gpt-4o-mini"
MODEL_PROVIDER = "openai"

# 网络搜索（可选）
# SERPER_API_KEY = "your_actual_serper_api_key_here"

# RAG功能（已归档，通常不需要）
RAG_ENABLED = false
RAG_TOP_K = 3
